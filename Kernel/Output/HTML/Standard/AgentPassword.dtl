<div class="MainBox ARIARoleMain">
    <h1>$Text{"Password Policy"}</h1>

    <div class="ContentColumn">

        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"Your current password is older then %s days. You need to set a new one.", "$Data{"PasswordMaxValidTimeInDays"}"}</h2>
            </div>
            <div class="Content">
                <p>
                    <font color="red">$Text{"$Data{"Error"}"}</font>
                </p>

                <h3>$Text{"Change Password"}</h3>

                <form action="$Env{"CGIHandle"}" method="post">
                    <input type="hidden" name="Action" value="$Env{"Action"}"/>
                    <input type="hidden" name="Subaction" value="Change"/>
                    <fieldset class="TableLike FixedLabel">

                        <label>$Text{"New password"}:</label>
                        <div class="Field"><input type="password" name="NewPw" value="" size="12"/></div>
                        <div class="Clear"></div>

                        <label>$Text{"New password again"}:</label>
                        <div class="Field"><input type="password" name="NewPw1" value="" size="12"/></div>
                        <div class="Clear"></div>

                    </fieldset>

                    <input class="button" type="submit" value="$Text{"Update"}"/>

                </form>
            </div>
        </div>

        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"Password Policy"}</h2>
            </div>
            <div class="Content">

                <p>
                    <ul>
<!-- dtl:block:PasswordMaxValidTimeInDays -->
                        <li>o $Text{"Password need to be renewed every %s days.", "$Data{"PasswordMaxValidTimeInDays"}"}</li>
<!-- dtl:block:PasswordMaxValidTimeInDays -->
<!-- dtl:block:PasswordHistory -->
                        <li>o $Text{"Password history is active, you can't use a password which was used the last %s times.", "$Data{"PasswordHistory"}"}</li>
<!-- dtl:block:PasswordHistory -->
<!-- dtl:block:PasswordMinSize -->
                        <li>o $Text{"Password size is min. %s character.", "$Data{"PasswordMinSize"}"}</li>
<!-- dtl:block:PasswordMinSize -->
<!-- dtl:block:PasswordMin2Lower2UpperCharacters -->
                        <li>o $Text{"Password required min. 2 lower and 2 upper character."}</li>
<!-- dtl:block:PasswordMin2Lower2UpperCharacters -->
<!-- dtl:block:PasswordMin2Characters -->
                        <li>o $Text{"Password required min. 2 character."}</li>
<!-- dtl:block:PasswordMin2Characters -->
<!-- dtl:block:PasswordNeedDigit -->
                        <li>o $Text{"Password required min. 1 digit."}</li>
<!-- dtl:block:PasswordNeedDigit -->
                    </ul>
                </p>
<!-- dtl:block:AdminConfig -->
                <br/>
                <p>
                    <a href="index.pl?Action=AdminSysConfig;Subaction=Edit;SysConfigSubGroup=Frontend::Agent::Password;SysConfigGroup=Framework::Password::Policy">$Text{"Change Config Options"}</a> <font color="red">(*$Text{"Admin Permissions are required!"})</font>
                </p>
<!-- dtl:block:AdminConfig -->
            </div>
        </div>
    </div>
</div>
